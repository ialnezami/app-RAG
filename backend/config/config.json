{
  "ai_providers": {
    "openai": {
      "name": "OpenAI",
      "base_url": "https://api.openai.com/v1",
      "api_key_env": "OPENAI_API_KEY",
      "models": {
        "gpt-4o-mini": {
          "name": "GPT-4o Mini",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.00015
        },
        "gpt-4": {
          "name": "GPT-4",
          "max_tokens": 8000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.03
        },
        "gpt-3.5-turbo": {
          "name": "GPT-3.5 Turbo",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.002
        },
        "text-embedding-3-small": {
          "name": "Text Embedding 3 Small",
          "dimensions": 1536,
          "cost_per_1k_tokens": 0.00002
        },
        "text-embedding-3-large": {
          "name": "Text Embedding 3 Large",
          "dimensions": 3072,
          "cost_per_1k_tokens": 0.00013
        }
      }
    },
    "anthropic": {
      "name": "Anthropic",
      "base_url": "https://api.anthropic.com/v1",
      "api_key_env": "ANTHROPIC_API_KEY",
      "models": {
        "claude-3-sonnet": {
          "name": "Claude 3 Sonnet",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.003
        },
        "claude-3-haiku": {
          "name": "Claude 3 Haiku",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.00025
        },
        "claude-3-opus": {
          "name": "Claude 3 Opus",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.015
        }
      }
    },
    "google": {
      "name": "Google",
      "base_url": "https://generativelanguage.googleapis.com/v1beta",
      "api_key_env": "GOOGLE_API_KEY",
      "models": {
        "gemini-1.5-pro": {
          "name": "Gemini 1.5 Pro",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.00125
        },
        "gemini-1.5-flash": {
          "name": "Gemini 1.5 Flash",
          "max_tokens": 4000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.000075
        },
        "text-embedding-004": {
          "name": "Text Embedding 004",
          "dimensions": 768,
          "cost_per_1k_tokens": 0.00001
        }
      }
    },
    "custom": {
      "name": "Custom API",
      "base_url": "http://localhost:11434/v1",
      "api_key_env": "CUSTOM_API_KEY",
      "models": {
        "llama3": {
          "name": "Llama 3",
          "max_tokens": 2000,
          "temperature": 0.7,
          "cost_per_1k_tokens": 0.0
        },
        "llama3-embedding": {
          "name": "Llama 3 Embedding",
          "dimensions": 4096,
          "cost_per_1k_tokens": 0.0
        }
      }
    }
  },
  "default_profiles": [
    {
      "id": 1,
      "name": "General Assistant",
      "description": "General purpose Q&A assistant",
      "prompt": "You are a helpful assistant. Use the following context to answer questions accurately and concisely.\n\nContext: {context}\n\nQuestion: {question}\n\nAnswer:",
      "provider": "openai",
      "model": "gpt-4o-mini",
      "settings": {
        "max_context_chunks": 5,
        "chunk_size": 1000,
        "chunk_overlap": 200,
        "temperature": 0.7,
        "max_tokens": 1000
      }
    },
    {
      "id": 2,
      "name": "Technical Expert",
      "description": "Technical documentation assistant",
      "prompt": "You are a technical expert. Provide detailed, accurate answers based on the documentation context. Include code examples when relevant.\n\nContext: {context}\n\nQuestion: {question}\n\nAnswer:",
      "provider": "anthropic",
      "model": "claude-3-sonnet",
      "settings": {
        "max_context_chunks": 8,
        "chunk_size": 1500,
        "chunk_overlap": 300,
        "temperature": 0.3,
        "max_tokens": 2000
      }
    },
    {
      "id": 3,
      "name": "Creative Writer",
      "description": "Creative writing and content generation",
      "prompt": "You are a creative writer. Use the provided context to inspire creative and engaging responses.\n\nContext: {context}\n\nQuestion: {question}\n\nAnswer:",
      "provider": "google",
      "model": "gemini-1.5-pro",
      "settings": {
        "max_context_chunks": 6,
        "chunk_size": 1200,
        "chunk_overlap": 250,
        "temperature": 0.9,
        "max_tokens": 1500
      }
    }
  ],
  "embedding": {
    "default_provider": "openai",
    "default_model": "text-embedding-3-small",
    "dimensions": 1536,
    "batch_size": 100,
    "max_retries": 3,
    "timeout": 30
  },
  "chunking": {
    "default_chunk_size": 1000,
    "default_chunk_overlap": 200,
    "min_chunk_size": 100,
    "max_chunk_size": 2000,
    "preserve_paragraphs": true,
    "preserve_sentences": true
  },
  "search": {
    "default_limit": 10,
    "max_limit": 50,
    "similarity_threshold": 0.7,
    "rerank_results": true,
    "include_metadata": true
  },
  "chat": {
    "max_context_chunks": 10,
    "streaming_enabled": true,
    "typing_indicator_delay": 1000,
    "max_message_length": 4000,
    "context_window_size": 8000
  }
}
